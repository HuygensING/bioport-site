    <html metal:use-macro="context/@@main_template/macros/master">
<div metal:fill-slot="content">
<div class="colleft">
   <h1>Op <span tal:replace="view/today">deze dag</span> geboren</h1>
   <div class="list_of_persons">
       <div  tal:repeat="person view/get_persons_born_today" tal:omit-tag="">
       <div metal:use-macro="context/@@personen/macros/render_person" />
       </div>
	</div>
</div>
<div class="colright">
           <h1 i18n:translate="born_on_day">Op <span i18n:name="today_date" tal:replace="view/today">deze dag</span> gestorven</h1>

   <div class="list_of_persons">
            <span tal:omit-tag=""
                 tal:repeat="person view/get_persons_dead_today">
       <div metal:use-macro="context/@@personen/macros/render_person" />
                   </span> 
	</div>
</div>
</div>
</html>


